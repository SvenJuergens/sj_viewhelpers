{
    "name": "svenjuergens/sj_viewhelpers",
    "type": "typo3-cms-extension",
    "description": "Small Collection of ViewHelpers",
    "license": [
        "GPL-2.0-or-later"
    ],
    "require": {
        "typo3/cms-core": "^9.5.30 || ^10.4 || ^11.5",
		"typo3/cms-extbase": "^9.5.30 || ^10.4 || ^11.5",
        "ext-libxml": "*",
        "ext-dom": "*",
        "ext-simplexml": "*"
    },
    "autoload": {
        "psr-4": {
            "SvenJuergens\\SjViewhelpers\\": "Classes/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "sj_viewhelpers",
			"app-dir": ".Build",
			"web-dir": ".Build/public"
		}
    },
	"config": {
		"vendor-dir": ".Build/vendor",
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "php-parallel-lint/php-console-highlighter": "^0.5.0"
    },
    "scripts": {
        "test:php:lint": [
            "parallel-lint --exclude .Build ."
        ],
		"cgl": [
			"php-cs-fixer fix --config=.php-cs-fixer.php --diff --dry-run --verbose"
		],
		"cglFix": [
			"php-cs-fixer fix --config=.php-cs-fixer.php"
		]
	}
}
